<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="53dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_categoriesdetail_title"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Category Detail"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_categoriesdetail_taskname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Category Name: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingRight="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_categoriesdetail_title" />

            <TextView
                android:id="@+id/tv_categoriesdetail_categoriesdetail_textbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/background_tasks_item"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textSize="18sp"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1"
                android:scrollHorizontally="true"
                android:ellipsize="none"

                app:layout_constraintStart_toEndOf="@id/tv_categoriesdetail_taskname_label"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_categoriesdetail_taskname_label" />


            <TextView
                android:id="@+id/tv_categoriesdetail_categories_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Icon: "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingRight="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_categoriesdetail_categoriesdetail_textbox" />

            <ImageView
                android:id="@+id/tv_categoriesdetail_categories"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_border"

                app:layout_constraintLeft_toRightOf="@+id/tv_categoriesdetail_categories_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_categoriesdetail_taskname_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
