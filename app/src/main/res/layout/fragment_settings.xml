        <!--  Text Theme -->
        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_item_effect"
            android:drawablePadding="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@string/theme"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableLeftCompat="@drawable/ic_theme"
            app:layout_constraintStart_toStartOf="@+id/tv_account"
            app:layout_constraintTop_toBottomOf="@+id/tv_account" />

        <!--  arrow right  -->
        <ImageView
            android:id="@+id/ic_arrow_right_theme"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/blue"
            app:layout_constraintBottom_toBottomOf="@+id/tv_theme"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--  Text Language -->
        <TextView
            android:id="@+id/tv_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_item_effect"
            android:drawablePadding="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@string/language"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableLeftCompat="@drawable/ic_language"
            app:layout_constraintStart_toStartOf="@+id/tv_account"
            app:layout_constraintTop_toBottomOf="@+id/tv_theme" />

        <!--  arrow right  -->
        <ImageView
            android:id="@+id/ic_arrow_right_lang"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/blue"
            app:layout_constraintBottom_toBottomOf="@+id/tv_language"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--  Text Help & Feedback -->
        <TextView
            android:id="@+id/tv_help_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_item_effect"
            android:drawablePadding="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@string/help_feedback"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableLeftCompat="@drawable/ic_help_feedback"
            app:layout_constraintStart_toStartOf="@+id/tv_account"
            app:layout_constraintTop_toBottomOf="@+id/tv_language" />

        <!--  arrow right  -->
        <ImageView
            android:id="@+id/ic_arrow_right_help"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/blue"
            app:layout_constraintBottom_toBottomOf="@+id/tv_help_feed"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--  Text About -->
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="20dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:background="@drawable/ripple_item_effect"
            android:text="@string/about"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:drawableLeftCompat="@drawable/ic_about"
            app:layout_constraintStart_toStartOf="@+id/tv_account"
            app:layout_constraintTop_toBottomOf="@+id/tv_help_feed" />

        <!--  arrow right  -->
        <ImageView
            android:id="@+id/ic_arrow_right_about"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/blue"
            app:layout_constraintBottom_toBottomOf="@+id/tv_about"
            app:layout_constraintEnd_toEndOf="parent" />

